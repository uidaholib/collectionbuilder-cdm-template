---
# metadata for json export
---
{%- assign items = site.data[site.metadata] -%}
{%- assign fields = site.data.theme.metadata-export-fields | split: "," -%}
{ "objects": [
    {%- for item in items -%}
    { 
        {% for f in fields %}{% if item[f] %}{{ f | jsonify }}: {{ item[f] | jsonify }},{% endif %}
        {% endfor %}"image_thumb": "{% include image/thumb.html %}",{% if item.format contains 'image' %}"image_medium": "{% include image/medium.html %}","image_full": "{% include image/original.html %}",{% endif %}"canonical_url": {{ "/items/" | append: item.objectid | append: ".html" | absolute_url | jsonify }}
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
] }
