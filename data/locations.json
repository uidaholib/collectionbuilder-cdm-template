---
# find and count unique subjects
---
{%- if site.data.theme.locations-on == true -%}
{%- assign raw-subjects = site.data[site.data.theme.metadata] | map: "location" | join: ";" | split: ";" | compact -%}
{%- capture subjects -%}{% for s in raw-subjects %}{% if s != "" and s != " " %}{{ s | strip }};{% endif %}{%- endfor -%}{%- endcapture -%}
{%- assign subjects = subjects | split: ";" -%}
{%- assign uniqueSubjects = subjects | uniq | sort -%}
{ "locations": [
    {% for unique in uniqueSubjects %}{% assign count = subjects | where_exp: 'item', 'item == unique' | size %}{ "loaction" : {{ unique | jsonify }}, "count" : {{ count | jsonify }}, "link" : {{ unique | url_param_escape | prepend: '/browse.html#' | absolute_url | jsonify }} }{% unless forloop.last %},
    {% endunless %}{% endfor %}
]}{%- endif -%}